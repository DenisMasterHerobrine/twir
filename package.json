{
  "name": "tsuwari",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts,.vue apps/",
    "lint:fix": "eslint --fix --ext .ts,.vue,tsx apps/ frontend/",
    "dev": "turbo run dev --filter=./apps/* --filter=./frontend/*",
    "build": "turbo run build",
    "build:libs": "turbo run build --filter=./libs/**",
    "migrate:deploy": "doppler run -- pnpm --filter=@tsuwari/typeorm run deploy"
  },
  "author": "Satont <satontworldwide@gmail.com>",
  "devDependencies": {
    "@satont/eslint-config": "github:satont/eslint-config",
    "@types/node": "18.11.10",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "cross-env": "^7.0.3",
    "eslint": "8.28.0",
    "eslint-plugin-import": "2.26.0",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "tsx": "3.12.1",
    "turbo": "1.6.3",
    "typescript": "4.9.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@types/youtube-player@5.5.6": "patches/@types__youtube-player@5.5.6.patch"
    }
  }
}