{
  "name": "@tsuwari/websockets",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -b tsconfig.json",
    "dev": "reflex -s -r '\\.ts$' -- sh -c 'cross-env TS_NODE_TRANSPILE_ONLY=true node --loader ts-node/esm --enable-source-maps --trace-warnings --nolazy src/index.ts'",
    "start": "node --enable-source-maps dist/index.js"
  },
  "dependencies": {
    "@tsuwari/config": "workspace:*",
    "@tsuwari/grpc": "workspace:*",
    "@tsuwari/typeorm": "workspace:*",
    "ioredis": "^5.2.4",
    "nats": "^2.9.0",
    "nice-grpc": "^2.0.1",
    "socket.io": "^4.5.3"
  },
  "devDependencies": {
    "@tsuwari/types": "workspace:*"
  }
}
