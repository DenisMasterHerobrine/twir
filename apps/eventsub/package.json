{
  "name": "@tsuwari/eventsub",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "dev": "reflex -s -g 'src/**/*.ts' -- sh -c 'cross-env TS_NODE_TRANSPILE_ONLY=true node --loader ts-node/esm --enable-source-maps --trace-warnings --inspect=0.0.0.0:9232 --nolazy src/index.ts'",
    "start": "node --enable-source-maps dist/index.js"
  },
  "dependencies": {
    "@tsuwari/config": "workspace:*",
    "@tsuwari/grpc": "workspace:*",
    "@tsuwari/pubsub": "workspace:*",
    "@tsuwari/shared": "workspace:*",
    "@tsuwari/typeorm": "workspace:*",
    "@tsuwari/types": "workspace:*",
    "@twurple/api": "5.2.7",
    "@twurple/auth": "5.2.7",
    "@twurple/common": "5.2.7",
    "@twurple/eventsub": "5.2.7",
    "express": "4.18.2",
    "ngrok": "4.3.3",
    "nice-grpc": "^2.0.1",
    "reflect-metadata": "0.1.13",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@types/express": "4.17.14"
  }
}